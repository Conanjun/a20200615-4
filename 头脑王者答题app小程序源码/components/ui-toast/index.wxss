/* components/ui-toast/index.wxss */

.wx-toast-box {
    display: flex;
    width: 100%;
    justify-content: center;
    position: fixed;
    z-index: 999;
    top: 50%;
    left: 0;
    opacity: 0;
    transform: translateY(-50%);
}

.wx-toast-content {
    width: 100%;
    margin: 0 20rpx;
    border-radius: 10rpx;
    padding: 10rpx 20rpx 20rpx;
    background: rgba(0, 0, 0, 0.6);
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.wx-toast-toast {
    width: 100%;
    color: #fff;
    font-size: 28rpx;
    text-align: center;
}
