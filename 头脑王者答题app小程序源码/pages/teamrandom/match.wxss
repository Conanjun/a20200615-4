/* pages/personal/match.wxss */
page{background: #4F83E8;}
.circle {width:250px;height:250px;border-radius:250px;border:1px solid #fff;position:relative;margin:0 auto;}
.circle .circle-icon {animation:circleRoate0 4s infinite linear;position:absolute;z-index:200;top:0;left:50%;height:50%;transform-origin:50% 100%;transform:rotate(45deg);}
.circle .circle-icon:before {content:'♀';padding:2px;position:absolute;z-index:100;left:0px;top:-20px;color:#fff;font-size:24px;}
.circle .circle-icon-square {animation:circleRoate90 4s infinite linear;position:absolute;z-index:200;top:0;left:50%;height:50%;transform-origin:50% 100%;transform:rotate(145deg);}
.circle .circle-icon-square:before {content:'▣';padding:2px;position:absolute;z-index:100;left:0px;top:-20px;color:#fff;font-size:24px;}
.circle-inner {width:200px;height:200px;border-radius:200px;border:1px solid #fff;position:relative;margin:0 auto;margin-top:25px;}
.circle-inner .circle-inner-icon {animation:circleRoate180 6s infinite linear;position:absolute;z-index:200;top:0;left:50%;height:50%;transform-origin:50% 100%;transform:rotate(45deg);}
.circle-inner .circle-inner-icon:before {content:'';padding:3px;position:absolute;z-index:100;left:0px;top:-8px;border:5px solid #fff;border-radius:50%;}
.circle-inner .circle-inner-icon-square {animation:circleRoate360 6s infinite linear;position:absolute;z-index:200;top:0;left:50%;height:50%;transform-origin:50% 100%;transform:rotate(145deg);}
.circle-inner .circle-inner-icon-square:before {content:'★';padding:2px;position:absolute;z-index:100;left:0px;top:-20px;color:#fff;font-size:24px;}

@keyframes circleRoate0 {
    from {
        transform: rotate(0deg);
    }

    to {
        transform: rotate(360deg);
    }
}

@keyframes circleRoate90 {
    from {
        transform: rotate(90deg);
    }

    to {
        transform: rotate(-270deg);
    }
}

@keyframes circleRoate180 {
    from {
        transform: rotate(180deg);
    }

    to {
        transform: rotate(-180deg);
    }
}

@keyframes circleRoate360 {
    from {
        transform: rotate(360deg);
    }

    to {
        transform: rotate(0deg);
    }
}

.animation {
    animation: fadeIn 1s;
    -webkit-animation: fadeIn 1s;
    animation-fill-mode: both;
    -webkit-animation-fill-mode: both;
}

@keyframes fadeIn {
    0% {
        opacity: 0;
    }

    100% {
        opacity: 1;
    }
}

@-webkit-keyframes fadeIn {
    0% {
        opacity: 0;
    }

    100% {
        opacity: 1;
    }
}