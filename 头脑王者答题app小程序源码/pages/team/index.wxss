/* pages/team/index.wxss */
page{background: #4F83E8;}
.fk-ccontainer{display:flex;flex-direction:column;height:100%}
.fk-header-container{height:50px;display:flex;flex-direction:column;align-items:center;color:#ffffff;line-height:40px;}
.fk-reward-intro{height:33%;display:flex;flex-direction:column;justify-content:center;align-items:center;}
.fk-reward-placeholder{width:36px;text-align:center;}
.fk-reward-integral{width:36px;text-align:center;display:flex;flex-direction:column;align-items:center;color:#ffffff;font-size:12px;}
.fk-reward-dot{width:16px;height:16px;margin:3px 10px;box-shadow:0 2px 4px rgba(0,0,0,.2);border-radius:20px;}
.fk-reward-num{font-size:12px;color:#00e2bd;width:36px;text-align:center;}
.fk-reward-num.bold{font-size:16px;font-weight:bold;color:#ffffff;}
.fk-footer{height:calc(100% - 50px);display:flex;flex-direction:column;justify-content:center;align-items:center;}
.fk-footer-times{margin-bottom:15px;color:#ffffff;font-size:14px;}
.fk-footer-button{width:90%;box-shadow:0 3px 6px rgba(0,0,0,.2);background-color:#00e2bd;padding:10px 0;flex:1;color:#ffffff;font-size:24px;font-weight:bold;text-align:center;border-radius:5px;margin-bottom:15px;letter-spacing:3px;display:flex;justify-content:center;align-items:center}
.fk-footer-button.danger{background-color:#e64340}
.fk-footer-button.success{background-color:#09bb07}