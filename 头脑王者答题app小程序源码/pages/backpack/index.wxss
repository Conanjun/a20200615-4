/* pages/backpack/index.wxss */
.fk-container{background-color:#ffffff;margin:10px;border-radius:10px;}
.fk-props-container{display:flex;padding:10px;align-items:flex-start;flex-wrap:wrap;margin:0 auto;}
.fk-props{display:flex;flex-direction:column;justify-content:center;align-items:center;height:150px;width:33.33%;}
.fk-props image{width:80px;height:80px;border-radius:100%;}
.fk-props-name{background-color:#4570ce;border-radius:20px;padding:2px 7px;font-size:12px;color:#ffffff;}
.fk-props-count{color:#4570ce;font-weight:bold;}

.fk-props-info{padding:30px 0;background-color:#fff;border-radius:10px;}
.fk-props-info-name{font-size:20px;font-weight:bold;padding:10px;text-align:center;margin-bottom:30px;background-color:#4F83E8;color:#ffffff;}
.fk-props-desc{padding:0 30px;font-size:16px;font-weight:bold;}
.fk-props-button{border-radius:40px;font-size:20px;font-weight:bold;text-align:center;padding:10px 0;margin:0 auto;background-color:#00e2bd;color:#fff;box-shadow:0 2px 4px rgba(0,0,0,.4);text-shadow:0 2px 4px rgba(0,0,0,.5);margin-top:20px;}